{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News Article",
    "description": "Blog posts and news articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "publishedAt": {
      "type": "date",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Facility Updates",
        "Member Achievements",
        "Youth Programs",
        "Safety",
        "Competition",
        "General News"
      ],
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
