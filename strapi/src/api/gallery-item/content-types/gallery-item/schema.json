{
  "kind": "collectionType",
  "collectionName": "gallery_items",
  "info": {
    "singularName": "gallery-item",
    "pluralName": "gallery-items",
    "displayName": "Gallery Item",
    "description": "An individual photo or video for the gallery"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "altText": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "videos"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Events",
        "Facilities",
        "Training",
        "Competitions",
        "Historical",
        "Members"
      ],
      "required": true
    },
    "photographer": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
